{
    "ts-node": {
        "esm": true
    },
    "compilerOptions": {
        "module": "es2022",
        "esModuleInterop": true,
        "target": "es2022",
        "lib": ["es2022", "dom"],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "index.ts", 
        "test/**/*",
        "lib/**/*"
    ]
}
