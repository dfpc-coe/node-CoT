{
    "compilerOptions": {
        "strict": true,
        "strictNullChecks": true,
        "module": "es2022",
        "esModuleInterop": true,
        "target": "es2022",
        "lib": ["es2022", "dom"],
        "skipLibCheck": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "verbatimModuleSyntax": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*"
            ]
        }
    },
    "include": [
        "index.ts", 
        "test/**/*",
        "lib/*.ts",
        "lib/xml/*.ts",
        "lib/schema.json"
    ]
}
