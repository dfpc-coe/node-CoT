{
    "name": "@tak-ps/node-cot",
    "type": "module",
    "version": "10.9.5",
    "description": "Lightweight JavaScript library for parsing and manipulating TAK messages",
    "author": "Nick Ingalls <nick@ingalls.ca>",
    "main": "dist/esm/index.js",
    "types": "index.ts",
    "exports": {
        "require": "dist/cjs/index.js",
        "import": "./disat/esm/index.js"
    },
    "scripts": {
        "test": "ts-node-test test/",
        "lint": "eslint *.ts lib/ test/",
        "doc": "typedoc index.ts",
        "build": "npm run build:esm && npm run build:cjs",
        "build:esm": "tsc --build && cp package.json dist/esm/ && cp ./lib/*.xml ./dist/esm/lib/ &&  mkdir -p ./dist/esm/lib/proto/ && cp lib/proto/* ./dist/esm/lib/proto/",
        "build:cjs": "tsup index.ts --format cjs,esm",
        "pretest": "npm run lint"
    },
    "dependencies": {
        "@openaddresses/batch-error": "^2.4.0",
        "@sinclair/typebox": "^0.33.0",
        "@turf/ellipse": "^7.0.0",
        "@turf/helpers": "^7.0.0",
        "@turf/point-on-feature": "^7.0.0",
        "@turf/truncate": "^7.0.0",
        "@types/archiver": "^6.0.2",
        "@types/color": "^3.0.3",
        "@types/geojson": "^7946.0.14",
        "ajv": "^8.12.0",
        "archiver": "^7.0.1",
        "color": "^4.2.3",
        "json-diff-ts": "^4.0.1",
        "node-stream-zip": "^1.15.0",
        "protobufjs": "^7.3.0",
        "rimraf": "^6.0.0",
        "xml-js": "^1.6.11"
    },
    "devDependencies": {
        "@types/node": "^22.0.0",
        "@types/tape": "^5.6.0",
        "eslint": "^9.0.0",
        "tape": "^5.6.1",
        "ts-node": "^10.9.1",
        "ts-node-test": "^0.4.0",
        "tsup": "^8.2.4",
        "typedoc": "^0.26.0",
        "typescript": "^5.5.0",
        "typescript-eslint": "^8.0.0"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/dfpc-coe/node-cot.git"
    },
    "keywords": [
        "tak",
        "atak",
        "wintak",
        "cot",
        "cusor",
        "target",
        "tactical"
    ],
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/dfpc-coe/node-cot/issues"
    },
    "homepage": "https://github.com/dfpc-coe/node-cot#readme"
}
